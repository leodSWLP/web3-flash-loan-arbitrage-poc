{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Run Current TS File with ts-node",
          "program": "${file}",
          "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
          "skipFiles": [
              "<node_internals>/**"
          ],
          "outFiles": [
              "${workspaceFolder}/**/*.js"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
      }
  ]
}